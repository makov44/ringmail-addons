<odoo>
    <data>
        <record model="ir.ui.view" id="ringmail_reg_domain_tree">
            <field name="name">ringmail_reg.domain.tree</field>
            <field name="model">ringmail_reg.domain</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ringmail_reg_domain_form">
            <field name="name">ringmail_reg.domain.form</field>
            <field name="model">ringmail_reg.domain</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Domains">
                    <header>
                        <button string="Confirm" type="object" name="confirm_domain"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Verify Domain Name" attrs="{'invisible':[('state', '=', 'done')]}">
                                <group  string="Verify domain name using a DNS record">
                                     <label string="Create a TXT record that contains exactly this value:" />
                                     <field name="txt_record" nolabel="1" />
                                     <label string="Additional Instructions:"></label>
                                     <div>
                                        <a href="https://www.godaddy.com/help/manage-dns-zone-files-680" target="_blank"
                                           class="btn-link pull-left">GoDaddy: Adding or Editing TXT Records
                                        </a>
                                    </div>
                                </group>
                                <group string="Or, verify domain name using a web page">
                                    <lable string="Install this HTML page within the root ('/') directory of your web site"></lable>
                                     <field name="page" filename="page_fname" widget="binary"/>
                                     <field name="page_fname" invisible="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ringmail_reg_action_window_domain">
            <field name="name">Domains</field>
            <field name="res_model">ringmail_reg.domain</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>